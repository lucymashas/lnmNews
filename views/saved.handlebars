{{>header}}
  <div id="wrapper">
    <div class="container">
      <div class="content">
              <h2>Saved Articles</h2>
        {{#each items}}
        <!-- News section -->
          <div class="row">
          
            <div class="col-md-12 divarea">
                <div class="header">
                   <h3 data-id="{{_id}}"><a href='{{link}}' target="_blank">{{headline}}</a></h3>
                    <div class="btn-group" role="group" aria-label="Button Group">
                      {{!-- <div id="notesbtn"> --}}
                        <button type="button" class="btn btn-primary btnsm" data-toggle="modal" data-target="#notesModal" id="notesbtn">Write A Note</button>
                      {{!-- </div> --}}

                     <!-- Notes Modal -->
                      <div class="modal" id="notesModal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                  
                                    <h4>Notes for Article:  {{this._id}}</h4>
                                      <span class="close" data-dismiss="modal" id="closewindow">&times;</span>
                                </div>  <!-- end modal header -->

                                    <!-- Display Notes Container -->
                              <div class="modal-body" id="displaynotes" > 
                                    {{#if notes}}
                                       {{#each data}}
                                      <div id="prevnotes">{{note}}</div>
                                        {{/each}}
                                    {{else}}
                                      <div id="prevnotes">No Previous Notes{{note}}</div>
                                    {{/if}}
                                      <form action = "/submitNote{{this._id}}" method="post">
                                          <div>
                                            <input name="{{this._id}}">
                                            <textarea type="text" rows= 3 type="textarea" id="notesContainer" placeholder="Click here to enter note ..." name="note"></textarea>
                                          </div>
                                          <div class="modal-footer">
                                              <button data-id="{{this._id}}"type="submit" class="btn btn-primary btn-sm" id="articleid" name="articleid">SAVE NOTE</button>
                                          </div>
                                      </form>

                                </div>{{!-- end of modal body --}}
                            </div> <!-- end of modal content -->
                        </div> <!-- end of modal dialog -->
                      </div> {{!-- end of Modal --}}
                      
                      <form action="/delete{{this._id}}" method="post">
                          <button type="submit" class="btn warning btnsm">Delete Article</button>
                      </form>

                    </div>
                </div>
                    <p>{{summary}}</p>
            </div>  
                            
          </div><!-- End row -->
        {{/each}}  
      </div>

    </div>{{!-- end of container div --}}
  </div>{{!-- end of wrapper --}}

   

   
    
  